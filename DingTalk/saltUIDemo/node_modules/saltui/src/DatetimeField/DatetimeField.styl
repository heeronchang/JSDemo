$datetime-field-tip-color = $gray-lighter
$datetime-field-readonly-color = $gray-lighter

.{$prefix}-datetime-field-value
    > *
        vertical-align middle

.{$prefix}-datetime-field-icon svg
    fill $datetime-field-tip-color

.{$prefix}-datetime-field-placeholder
    max-width 100%
    height 24px
    line-height 24px
    color $datetime-field-tip-color

.{$prefix}-datetime-field-readonly
    color $datetime-field-readonly-color
