$select-field-tip-color = $normal-alpha-5
$select-field-readonly-color = $normal-alpha-5

.{$prefix}-select-field-value
    > *
        vertical-align middle

.{$prefix}-select-field-icon svg
    fill $select-field-tip-color

.{$prefix}-select-field-placeholder
    max-width 100%
    height 24px
    line-height 24px
    color $select-field-tip-color

.{$prefix}-select-field-readonly
    color $select-field-readonly-color
