/* pages/login/login.wxss */
.baseView {
    position: fixed;
    height: 100%; 
    width: 100%;
    background-color: #f5f5f5;

    display: flex;
    flex-direction: column;
    align-items: center; 
}

.login_logo {
    width: 202rpx;
    height: 228rpx;
    margin-top: 30rpx;
}

.accountContainer {
    height: 268rpx;
    width: 690rpx;
    margin-top: 50rpx;

    background-color: #DDDDDD;
}

.accountContainer-account, .accountContainer-password, .accountContainer-verifycode {
    height: 88rpx;
    background-color: white;

    display: flex;
    flex-direction: row;
    align-items: center;
}

.accountContainer-password, .accountContainer-verifycode {
    margin-top: 2rpx;
}

.account-input, .account-input-verifycode {
    height: 88rpx;
}

/* .account-input-verifycode {
    width: 490rpx; 
} */

.account-verifycode {
  width: 200rpx;  
  height: 88rpx;

  background-color: gold;
}

.icon {
    margin-left: 10rpx;
    margin-right: 10rpx;
    width: 40rpx;
    height: 45rpx;
    background-color: white;
}

.loginBtn {
    height: 88rpx;
    width: 690rpx;
    margin-top: 50rpx;
    color: white;
    background-color: #08c3ff;  
}

.extra {
    height: 88rpx;
    width: 690rpx;
    margin-top: 30rpx;
    
    display: flex;
    flex-direction: row;
    align-items: center;
}

.extra-seporator {
    width: 1rpx;
    height: 20rpx;

    background-color: #DDDDDD;
}

.extraBtn {
    width: 400rpx;
    height: 88rpx;

    font-size: 15px;
    color: #757575;
    background-color: #f5f5f5;
}

.extraBtn::after {
    border: none;  
}

.version {
  margin-bottom: 15px;
  color:#757575;
  font-size: 11px;
}