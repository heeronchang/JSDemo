/* pages/test/NetWork/network.wxss */

.swiper {
  height: 300rpx;
  background-color: #999999;
}

.swiper-item .bannerImage {
  width: 100%;
  height: 100%;
}

.item {
  border: 2px solid #08ceff;
  margin: 20rpx 20rpx;
  /* padding: 10rpx; */
  background-color: #08ceff;
  border-radius: 20rpx;
  text-align: center;
  height: 328rpx;
}

.title {
  background-color: #000;
  opacity: 0.2;
  color: #fff;
  margin: 0rpx;
}

.top {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  position: fixed;
  bottom: 40rpx;
  right: 20rpx;
  text-align: center;
  font-size: 50rpx;
  opacity: 0.8;
  border-radius: 50%;
  border: 1px solid #fff;
}

.navbar{  
  flex: none;  
  display: flex;  
  background: #fff;  
} 

.navbar .sectionItem{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;  
  font-size:14px;
} 

/* 顶部导航字体颜色 */
.navbar .sectionItem.active{  
  color: #08ceff;  
}

/* 顶部指示条属性 */
.navbar .sectionItem.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 6rpx;  
  background: #08ceff;  
}